{
  "metadata": [
    {
      "src": [
        {
          "src": "../../Source/WPF-Control/Source/Providers", // 相对路径移到 src 字段
          "files": [ "**/*.csproj" ], // 使用通配符匹配 .csproj 文件
          "exclude": [ "**/bin/**", "**/obj/**" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "api/**.yml", "index.md" ]
      }
    ],
    "dest": "_site", // 生成的 HTML 输出目录
    "globalMetadata": {
      "_appTitle": "我的文档", // 设置文档标题
      "_appFooter": "版权所有 © 2023", // 设置页脚
      "_enableSearch": true // 启用搜索功能
    },
    "locales": {
      "en": "English",
      "zh-cn": "简体中文"
    }
  }
}